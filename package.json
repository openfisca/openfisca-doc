{
  "name": "openfisca-doc",
  "description": "OpenFisca documentation",
  "repository": {
    "type": "git",
    "url": "https://github.com/openfisca/openfisca-doc.git"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "gitbook build && gitbook pdf . ./_book/openfisca-doc.pdf",
    "clean": "del _book",
    "postinstall": "gitbook install",
    "start": "gitbook serve --port 2050",
    "test": "! (npm run build | grep 'warn:' | grep -v openfisca-doc.pdf)"
  },
  "engines" : {
    "node" : ">=0.12 <7"
  },
  "license": "AGPL-3.0",
  "private": true,
  "devDependencies": {
    "del-cli": "^0.2.1",
    "gitbook-cli": "^2.3.0",
    "gh-pages": "^1.0.0",
    "svgexport": "0.3.2"
  }
}
